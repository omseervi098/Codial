<div id="home-containe">
    <section id="feed-posts">
        <h4>Post</h4>
        <% if(locals.user){%>
            <form action="/posts/create" enctype="multipart/form-data" id="new-post-form" class="form-for-post" method="post">
                <textarea  name="content" id="content" cols="25" rows="3" placeholder="Type Here.."></textarea>
                <div id="post-image-preview"></div>
                <input type="file" name="image" id="image" accept="image/*" >  
                <input type="submit" value="Post" id="post-submit">
            </form>
            <%}%>
                <!--Listing post-->
                <div id="post-list-container">
                    <div id="post-list-container-div">
                        <% for(post of posts) { %>
                            <%- include('_post')%>
                                <%}%>
                    </div>
                </div>
    </section>
    <% if(locals.users){%>
    <section id="user-friends">
        <h4>Friends</h4>
        <div id="friends-reload">
            <% if (locals.user && friends.length>0){%>
                <div id="friend-list">
                    <% for(u of friends){%>
                        <%- include('_friend')%>
                            <%}%>
                </div>
                <%}%>
        </div>
    </section>
    <%}%>
    <section id="chatbox">
        
    </section>
</div>

