<link rel="stylesheet" href="<%=assetPath('css/loginandsignup.css')%>">
<div class="outer-container">
    <div class="container">
        <div class="left">
            <div class="logo"><img src="<%=assetPath('images/logo.png')%>" alt="logo"></div>   
        </div>
        <div class="right">
            <form action="/users/reset-pass?accessToken=<%= accessToken%>&email=<%=email%>" method="post">
                <div>
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" />
                </div>
                <div>
                    <label for="password">Confirm Password</label>
                    <input type="password" name="confirm_password" id="password" />
                </div>
                <!-- For access token -->        
                <input type="submit" value="Reset" class="purple-btn"/>
            </form>
        </div>
    </div>
</div>